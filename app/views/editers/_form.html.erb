<%= form_for(@editer, { multipart: true })  do |f| %>
<form class="form-horizontal">
  <div class="row">
    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :タイトル %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :title, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :企画内容 %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :description, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :解説 %>
      </div>
      <div class="col-sm-9">
        <%= f.text_area :content, class:"form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3">
        <%= f.label :参考サイト %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :site, class:"form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-1 text-right">
      <%= f.file_field :image %>

      </br>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
  <% end %>
</div>
</div>
</form>
